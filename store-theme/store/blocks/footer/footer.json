{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#footer-0-whitesection",
      "flex-layout.row#footer-4-bisogno",
      "flex-layout.row#footer-5-text-section",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },

  "flex-layout.row#footer-0-whitesection": {
    "children": [
      "flex-layout.col#logo-desktopSecondary",
      "flex-layout.row#footer-social-networks"
    ],
    "props": {
      "blockClass": "menu-white",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },

  "flex-layout.row#footer-social-networks": {
  "children": [
    "image#facebook",
    "image#instagram",
    "image#youtube"
  ],
  "props": {
    "blockClass": "menu-social-networks",
    "paddingTop": 6,
    "paddingBottom": 6
  }
},

  "image#facebook": {
    "props": {
      "src": "/arquivos/facebook.png",
      "maxHeight": 39,
      "maxWidth": 39,
      "alt": "facebook.com",
      "title": "facebook.com",
      "link": {
        "newTab": true,
        "url": "https://www.facebook.com/vtexonline/"
      }
    }
  },
  "image#instagram": {
    "props": {
      "src": "/arquivos/instagram.png",
      "maxHeight": 39,
      "maxWidth": 39,
      "alt": "instagram.com",
      "title": "instagram.com",
      "link": {
        "newTab": true,
        "url": "https://www.facebook.com/vtexonline/"
      }
    }
  },
  "image#youtube": {
    "props": {
      "src": "/arquivos/youtube.png",
      "maxHeight": 39,
      "maxWidth": 39,
      "alt": "youtube.com",
      "title": "youtube.com",
      "link": "https://www.youtube.com/user/VTEXTV"
    }
  },

  "flex-layout.row#footer-5-text-section": {
    "children": [
      "flex-layout.col#text1",
      "flex-layout.col#text2",
      "flex-layout.col#text3",
      "flex-layout.col#text4"
    ],
    "props": {
      "blockClass": "menu-text",
      "paddingTop": 6,
      "paddingBottom": 6
    }
  },

  "flex-layout.col#logo-desktopSecondary": {
    "props": {
      "verticalAlign": "middle",
      "blockClass": "footerWhite"
    },
    "children": ["logo#desktop"]
  },

  "flex-layout.row#footer-4-bisogno": {
    "children": [
      "flex-layout.row#bisogno"
    ],
    "props": {
      "blockClass": "menu-bisogno",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },

  "flex-layout.row#footer-1-desktop": {
    "children": [
      "vtex.menu@2.x:menu#Products",
      "vtex.menu@2.x:menu#footer-clothing",
      "vtex.menu@2.x:menu#footer-decoration",
      "vtex.menu@2.x:menu#footer-bags",
      "vtex.menu@2.x:menu#footer-5thmenu"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },

  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },


  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "iDO è un marchio Miniconf Spa\nSede Legale: Via Provinciale 1/A, 52010 Ortignano Raggiolo, Arezzo | Tel. +39.0575.5331 | miniconf @pec.miniconf.it\nP.IVA e CF 00249390519 | REA AR 64978 | Cap. Soc. € 3.000.000 | Soggetta all’attività di direzione e coordinamento di MINFIN s.r.l.",
      "blockClass": "footerRich"
    }
  },


  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#footer-0-mobile",
      "flex-layout.row#footer-1-mobile",
      "flex-layout.row#footer-2-mobile",
      "flex-layout.row#footer-3-mobile",
      "flex-layout.row#footer-6-mobile",
      "flex-layout.row#footer-4-mobile",
      "flex-layout.row#footer-5-mobile"
    ]
  }

}
